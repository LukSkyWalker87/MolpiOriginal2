          // Función para filtrar promociones
          window.filtrarPromociones = function(termino) {
            const tbody = document.getElementById('promocionesTableBody');
            if (!tbody) return;
            
            const filas = tbody.querySelectorAll('tr');
            
            filas.forEach(fila => {
              if (fila.cells.length < 2) return; // Saltar filas de carga o vacías
              
              const titulo = fila.cells[1].textContent.toLowerCase();
              const estado = fila.cells[3].textContent.toLowerCase();
              const fecha = fila.cells[4].textContent.toLowerCase();
              
              const coincide = titulo.includes(termino.toLowerCase()) ||
                              estado.includes(termino.toLowerCase()) ||
                              fecha.includes(termino.toLowerCase());
              
              fila.style.display = coincide ? '' : 'none';
            });
            
            // Mostrar mensaje si no hay resultados
            const filasVisibles = Array.from(filas).filter(fila => 
              fila.style.display !== 'none' && fila.cells.length >= 2
            );
            
            if (filasVisibles.length === 0 && termino) {
              tbody.innerHTML = `
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    <i class="fa fa-search fa-2x mb-2"></i><br>
                    No se encontraron promociones que coincidan con "${termino}"
                  </td>
                </tr>
              `;
            }
          };
          
          console.log('Promociones component loaded successfully');
          
