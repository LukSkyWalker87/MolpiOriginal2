        // 8. Función para guardar producto
        async function guardarProducto() {
          const formProducto = document.getElementById('formProducto');
          if (!formProducto) return;
          
          const btn = document.querySelector('#modalProducto .btn-primary[form="formProducto"]');
          const originalText = btn ? btn.innerHTML : '';
          
          try {
            if (btn) {
              btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Guardando...';
              btn.disabled = true;
            }
            
            let imagenUrl = document.getElementById('productoImagen').value;
            let imagenMosaicoUrl = document.getElementById('productoImagenMosaico').value;
            
            // Determinar la URL de subida según entorno
            const uploadUrl = (window.env && window.env.API_URL) ? `${window.env.API_URL}/upload/producto` : '/upload/producto';

            // Subir archivo de imagen del molde si existe
            const fileInputMolde = document.getElementById('productoImagenFile');
            if (fileInputMolde && fileInputMolde.files.length > 0) {
              const formData = new FormData();
              formData.append('file', fileInputMolde.files[0]);
              const uploadResponse = await fetch(uploadUrl, {
                method: 'POST',
                body: formData
              });
              const uploadResult = await uploadResponse.json();
              if (uploadResponse.ok) {
                imagenUrl = uploadResult.path;
              } else {
                throw new Error('Error subiendo imagen del molde: ' + uploadResult.error);
              }
            }

            // Subir archivo de imagen del mosaico si existe
            const fileInputMosaico = document.getElementById('productoImagenMosaicoFile');
            if (fileInputMosaico && fileInputMosaico.files.length > 0) {
              const formData = new FormData();
              formData.append('file', fileInputMosaico.files[0]);
              const uploadResponse = await fetch(uploadUrl, {
                method: 'POST',
                body: formData
              });
              const uploadResult = await uploadResponse.json();
              if (uploadResponse.ok) {
                imagenMosaicoUrl = uploadResult.path;
              } else {
                throw new Error('Error subiendo imagen del mosaico: ' + uploadResult.error);
              }
            }
            
            const formData = new FormData(formProducto);
            const productoData = Object.fromEntries(formData);
            
            // Sobrescribir URLs de imagen con las subidas
            if (imagenUrl) productoData.imagen_url = imagenUrl;
            if (imagenMosaicoUrl) productoData.imagen_mosaico_url = imagenMosaicoUrl;
            
            const url = productoEditando ? `/productos/${productoEditando}` : '/productos';
            const method = productoEditando ? 'PUT' : 'POST';
            
            const response = await fetch(url, {
              method: method,
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(productoData)
            });
            
            const result = await response.json();
            
            if (response.ok) {
              if (typeof $ !== 'undefined' && $('#modalProducto').length) {
                $('#modalProducto').modal('hide');
              }
              // Recargar productos
              // Siempre recargar todos los productos (activos + inactivos) y actualizar el array global
              const response2 = await fetch('/api/productos?incluir_inactivos=true');
              const data2 = await response2.json();
              productos = data2.productos || data2;
              // Aplicar el filtrado actual para mantener la vista
              await filtrarProductos();
              showSuccessToast('🎉 Producto guardado exitosamente');
            } else {
              showErrorToast('Error al guardar: ' + result.message);
            }
          } catch (error) {
            console.error('Error:', error);
            showErrorToast('Error al guardar el producto: ' + error.message);
          } finally {
            if (btn) {
              btn.innerHTML = originalText || 'Guardar Producto';
              btn.disabled = false;
            }
          }
        }
        
