      function filtrarProductos() {
        if (filtrandoProductos) return;
        filtrandoProductos = true;
        
        // Obtener valores de los filtros
        const categoria = document.getElementById('filtroCategoria').value;
        const subcategoria = document.getElementById('filtroSubcategoria').value;
        const linea = document.getElementById('filtroLinea').value;
        const busqueda = document.getElementById('buscarProducto').value.toLowerCase();
        
        console.log('🔍 Filtrando productos:', { categoria, subcategoria, linea, busqueda });
        
        // Cargar productos y aplicar filtros
        fetch('/productos')
          .then(response => response.json())
          .then(data => {
            console.log('📦 Datos recibidos:', data);
            // Manejar tanto array directo como objeto con propiedad productos
            const productos = Array.isArray(data) ? data : (data.productos || []);
            console.log('📦 Productos procesados:', productos.length);
            let productosFiltrados = productos;
            
            // Filtrar por categoría
            if (categoria && categoria !== '') {
              productosFiltrados = productosFiltrados.filter(p => {
                const match = p.categoria === categoria;
                if (!match) console.log(`❌ Producto ${p.nombre} no coincide con categoría ${categoria} (tiene: ${p.categoria})`);
                return match;
              });
              console.log(`📊 Después de filtrar por categoría "${categoria}": ${productosFiltrados.length} productos`);
            }
            
            // Filtrar por subcategoría
            if (subcategoria && subcategoria !== '') {
              productosFiltrados = productosFiltrados.filter(p => 
                p.subcategoria === subcategoria
              );
              console.log(`📊 Después de filtrar por subcategoría "${subcategoria}": ${productosFiltrados.length} productos`);
            }
            
            // Filtrar por línea de mosaicos
            if (linea && linea !== '') {
              productosFiltrados = productosFiltrados.filter(p => 
                p.subcategoria === linea
              );
              console.log(`📊 Después de filtrar por línea "${linea}": ${productosFiltrados.length} productos`);
            }
            
            // Filtrar por búsqueda de texto
            if (busqueda && busqueda !== '') {
              productosFiltrados = productosFiltrados.filter(p => 
                p.nombre.toLowerCase().includes(busqueda) ||
                (p.descripcion && p.descripcion.toLowerCase().includes(busqueda))
              );
              console.log(`📊 Después de filtrar por búsqueda "${busqueda}": ${productosFiltrados.length} productos`);
            }
            
            console.log(`✅ Productos filtrados: ${productosFiltrados.length} de ${productos.length}`);
            mostrarProductos(productosFiltrados);
          })
          .catch(error => {
            console.error('❌ Error filtrando productos:', error);
          })
          .finally(() => {
            filtrandoProductos = false;
          });
      }
      
