      // ========== FUNCIONES PARA NOTIFICACIONES TOAST ==========
      
      function showToast(message, type = 'success', duration = 4000) {
        const toastContainer = document.getElementById('toastContainer');
        const toastId = 'toast-' + Date.now();
        
        const toastHTML = `
          <div class="toast custom-toast ${type}" id="${toastId}" role="alert">
            <div class="toast-header">
              <strong class="mr-auto">
                ${type === 'success' ? '✅ Éxito' : type === 'error' ? '❌ Error' : '💡 Info'}
              </strong>
              <button type="button" class="close" data-dismiss="toast">
                <span>&times;</span>
              </button>
            </div>
            <div class="toast-body">
              ${message}
            </div>
          </div>
        `;
        
        toastContainer.insertAdjacentHTML('beforeend', toastHTML);
        const toastElement = document.getElementById(toastId);
        
        // Mostrar el toast
        $(toastElement).toast({
          autohide: true,
          delay: duration
        });
        $(toastElement).toast('show');
        
        // Eliminar el elemento del DOM después de que se oculte
        $(toastElement).on('hidden.bs.toast', function() {
          toastElement.remove();
        });
      }
      
      // Funciones de conveniencia
      window.showSuccessToast = (message, duration = 4000) => showToast(message, 'success', duration);
      window.showErrorToast = (message, duration = 5000) => showToast(message, 'error', duration);
      window.showInfoToast = (message, duration = 4000) => showToast(message, 'info', duration);
      
      // ========== FIN FUNCIONES TOAST ==========
      
      // ========== FUNCIÓN PARA CONFIRMACIONES DE ELIMINACIÓN ==========
      
      function showDeleteConfirmation(options = {}) {
        const {
          title = 'Confirmar eliminación',
          message = '¿Estás seguro de eliminar este elemento?',
          description = 'Esta acción no se puede deshacer. El elemento será eliminado permanentemente del sistema.',
          confirmText = 'Sí, eliminar',
          cancelText = 'Cancelar',
          onConfirm = () => {},
          itemName = ''
        } = options;
        
        // Resetear estilos del modal a los valores por defecto (eliminación)
        const modal = document.getElementById('deleteConfirmModal');
        const header = modal.querySelector('.modal-header');
        const icon = modal.querySelector('.modal-body i');
        const confirmBtn = document.getElementById('confirmDeleteBtn');
        
        header.className = 'modal-header bg-danger text-white';
        icon.style.color = '#dc3545';
        icon.className = 'fa fa-trash-o';
        confirmBtn.className = 'btn btn-danger ml-2';
        
        // Actualizar contenido del modal
        document.getElementById('deleteConfirmModalLabel').innerHTML = `
          <i class="fa fa-exclamation-triangle mr-2"></i>${title}
        `;
        document.getElementById('deleteConfirmMessage').textContent = itemName ? 
          `¿Estás seguro de eliminar ${itemName}?` : message;
        document.getElementById('deleteConfirmDescription').textContent = description;
        document.getElementById('confirmDeleteBtn').innerHTML = `
          <i class="fa fa-trash-o mr-1"></i> ${confirmText}
        `;
        
        // Configurar evento de confirmación
        const newConfirmBtn = confirmBtn.cloneNode(true);
        confirmBtn.parentNode.replaceChild(newConfirmBtn, confirmBtn);
        
        newConfirmBtn.addEventListener('click', function() {
          $('#deleteConfirmModal').modal('hide');
          onConfirm();
        });
        
        // Mostrar modal
        $('#deleteConfirmModal').modal('show');
      }
      
