                console.log('Promoción guardada:', promocionData);
              } else {
                const errorData = await response.text();
                showErrorToast('Error al guardar la promoción: ' + errorData);
              }
              
            } catch (error) {
              console.error('Error guardando promoción:', error);
              showErrorToast('Error al guardar la promoción');
            } finally {
              // Restaurar botón
              btnGuardar.innerHTML = originalText;
              btnGuardar.disabled = false;
            }
          };
          
          // Cargar promociones inmediatamente
          cargarPromociones();
          
