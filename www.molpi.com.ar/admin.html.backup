            const form = document.getElementById('formPromocion');
            const formData = new FormData(form);
            
            const promocionId = document.getElementById('promocionId').value;
            const isEditing = promocionId && promocionId !== '';
            
            const btnGuardar = document.getElementById('btnGuardarPromocion');
            const originalText = btnGuardar.innerHTML;
            
            try {
              // Mostrar loading en el botón
              btnGuardar.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Guardando...';
              btnGuardar.disabled = true;
              
              // Preparar datos
              const promocionData = {
                titulo: formData.get('titulo'),
                imagen: formData.get('imagen'),
                cartilla_pdf: formData.get('cartilla_pdf'),
                activo: parseInt(formData.get('activo')),
                fecha_creacion: formData.get('fecha_creacion')
              };
              
              // Manejar archivos de imagen si se seleccionó uno
              const fileImagen = document.getElementById('promocionImagenFile').files[0];
              if (fileImagen) {
                // Aquí podrías implementar la subida de archivo si tienes endpoint para ello
                // Por ahora, usamos la URL manual
