      // Funciones del ABM de productos
      function cargarCategorias() {
        fetch('/categorias')
          .then(response => response.json())
          .then(categoriasData => {
            // Guardar categorías en variable global
            categorias = categoriasData;
            
            const selectCategoria = document.getElementById('filtroCategoria');
            if (selectCategoria) {
              categorias.forEach(categoria => {
                const option = document.createElement('option');
                option.value = categoria.nombre;
                option.textContent = categoria.nombre;
                selectCategoria.appendChild(option);
              });
              
              // Agregar categoría especial "Podotáctiles" si no existe
              const tienePodotactiles = categorias.some(cat => cat.nombre === 'Podotáctiles');
              if (!tienePodotactiles) {
                const optionPodotactiles = document.createElement('option');
                optionPodotactiles.value = 'Podotáctiles';
                optionPodotactiles.textContent = 'Podotáctiles';
                selectCategoria.appendChild(optionPodotactiles);
                
                // También agregar a la variable global
                categorias.push({ id: 999, nombre: 'Podotáctiles' });
              }
            }
          })
          .catch(error => console.error('Error cargando categorías:', error));
      }
      
      function cargarSubcategorias(categoriaSeleccionada = null) {
        const selectSubcategoria = document.getElementById('filtroSubcategoria');
        if (!selectSubcategoria) return;
        
        // Limpiar opciones existentes excepto la primera
        selectSubcategoria.innerHTML = '<option value="">Todas las subcategorías</option>';
        
        let url = '/subcategorias';
        if (categoriaSeleccionada) {
          // Buscar el ID de la categoría seleccionada
          fetch('/categorias')
            .then(response => response.json())
            .then(categorias => {
              const categoria = categorias.find(cat => cat.nombre === categoriaSeleccionada);
              if (categoria) {
                url += `?categoria_id=${categoria.id}`;
              }
              
              fetch(url)
                .then(response => response.json())
                .then(subcategorias => {
                  subcategorias.forEach(subcategoria => {
                    const option = document.createElement('option');
                    option.value = subcategoria.nombre;
                    option.textContent = subcategoria.nombre;
                    selectSubcategoria.appendChild(option);
                  });
                })
                .catch(error => console.error('Error cargando subcategorías:', error));
            });
        } else {
          // Cargar todas las subcategorías
          fetch(url)
            .then(response => response.json())
            .then(subcategorias => {
              subcategorias.forEach(subcategoria => {
                const option = document.createElement('option');
                option.value = subcategoria.nombre;
                option.textContent = subcategoria.nombre;
                selectSubcategoria.appendChild(option);
              });
            })
            .catch(error => console.error('Error cargando subcategorías:', error));
        }
