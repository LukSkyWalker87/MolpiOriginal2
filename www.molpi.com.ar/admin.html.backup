        async function guardarPodotactil() {
          const id = parseInt(document.getElementById('podotactilId').value);
          const nombre = document.getElementById('podotactilNombre').value;
          const descripcion = document.getElementById('podotactilDescripcion').value;
          let imagenMolde = document.getElementById('podotactilImagenMolde').value;
          let imagenMosaico = document.getElementById('podotactilImagenMosaico').value;
          const activo = parseInt(document.getElementById('podotactilActivo').value);
          
          if (!nombre || !descripcion) {
            showErrorToast('Por favor completa todos los campos requeridos');
            return;
          }
          
          const btn = document.querySelector('#modalEditarPodotactil .btn-primary[form="formEditarPodotactil"]');
          const originalText = btn ? btn.innerHTML : '';
          
          try {
            if (btn) {
              btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Guardando...';
              btn.disabled = true;
            }
            
            // Subir archivo de imagen del molde si existe
            const fileInputMolde = document.getElementById('podotactilImagenMoldeFile');
            if (fileInputMolde && fileInputMolde.files.length > 0) {
              const formData = new FormData();
              formData.append('file', fileInputMolde.files[0]);
              
              const uploadResponse = await fetch('http://localhost:5000/upload/producto', {
                method: 'POST',
                body: formData
              });
              
              const uploadResult = await uploadResponse.json();
              if (uploadResponse.ok) {
                imagenMolde = uploadResult.path;
              } else {
                throw new Error('Error subiendo imagen del molde: ' + uploadResult.error);
              }
            }
            
            // Subir archivo de imagen del mosaico si existe
            const fileInputMosaico = document.getElementById('podotactilImagenMosaicoFile');
            if (fileInputMosaico && fileInputMosaico.files.length > 0) {
              const formData = new FormData();
              formData.append('file', fileInputMosaico.files[0]);
              
              const uploadResponse = await fetch('http://localhost:5000/upload/producto', {
                method: 'POST',
                body: formData
              });
              
              const uploadResult = await uploadResponse.json();
              if (uploadResponse.ok) {
                imagenMosaico = uploadResult.path;
              } else {
                throw new Error('Error subiendo imagen del mosaico: ' + uploadResult.error);
              }
            }
            
            // Preparar datos para enviar al servidor
            const productoData = {
              id: id,
              nombre: nombre,
              descripcion: descripcion,
              categoria: 'Podotáctiles',
              subcategoria: 'Discapacidad',
              imagen_url: imagenMolde,
              imagen_mosaico_url: imagenMosaico,
              precio: 0,
              precio_usd: 0,
              pdf_url: '',
              activo: activo
            };
            
            // Enviar al servidor
            const response = await fetch(`/productos/${id}`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(productoData)
            });
            
            if (response.ok) {
              // También actualizar localmente
              const index = productos.findIndex(p => p.id === id);
              if (index !== -1) {
                productos[index] = productoData;
              }
              
              // Actualizar la vista
              mostrarProductos(productos);
              
              // Cerrar modal
              $('#modalEditarPodotactil').modal('hide');
              
              showSuccessToast('Producto podotáctil actualizado exitosamente en base de datos');
              
              console.log('Producto podotáctil guardado en BD:', productoData);
            } else {
              throw new Error('Error del servidor al guardar');
            }
          } catch (error) {
            console.error('Error:', error);
            showErrorToast('Error al guardar los cambios: ' + error.message);
          } finally {
            if (btn) {
              btn.innerHTML = originalText || '<i class="fa fa-save mr-1"></i>Guardar Cambios';
              btn.disabled = false;
            }
          }
        }
        
        async function togglePodotactil(id) {
          const producto = productos.find(p => p.id === id);
          if (!producto) {
            showErrorToast('Producto no encontrado');
            return;
          }
          
          const nuevoEstado = !producto.activo;
          const accion = nuevoEstado ? 'activar' : 'desactivar';
          
          try {
            // Enviar solo el campo activo que queremos cambiar (como en promociones)
            const productoData = {
              nombre: producto.nombre,
              descripcion: producto.descripcion,
              categoria: producto.categoria,
              subcategoria: producto.subcategoria,
              pdf_url: producto.pdf_url,
              imagen_url: producto.imagen_url,
              imagen_mosaico_url: producto.imagen_mosaico_url,
              precio: producto.precio,
              precio_usd: producto.precio_usd,
              activo: nuevoEstado ? 1 : 0  // Solo cambiamos el estado activo
            };
            
            const response = await fetch(`/productos/${id}`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(productoData)
            });
            
            if (response.ok) {
              // Recargar productos desde la base de datos para reflejar el cambio
              const response2 = await fetch('/api/productos?incluir_inactivos=true');
              const todosProductos = await response2.json();
              
              // Actualizar el producto en el array local
              const index = productos.findIndex(p => p.id === id);
              if (index !== -1) {
                // Buscar el producto actualizado en la respuesta
                const productoActualizado = todosProductos.find(p => p.id === id);
                if (productoActualizado) {
                  productos[index] = productoActualizado;
                }
              }
              
              // Actualizar la vista con los productos actuales
              mostrarProductos(productos);
              
              showSuccessToast(`✅ Producto "${producto.nombre}" ${nuevoEstado ? 'activado' : 'desactivado'} exitosamente`);
              
              console.log(`Producto podotáctil ${accion}:`, productoData);
            } else {
              throw new Error(`Error del servidor al ${accion}`);
            }
          } catch (error) {
            console.error('Error:', error);
            showErrorToast(`Error al ${accion} el producto`);
          }
        }
        
        // Función para sincronizar productos podotáctiles con la base de datos
        async function sincronizarPodotactilesConBD(productosPodotactiles) {
          try {
            for (const producto of productosPodotactiles) {
              // Verificar si el producto existe en la base de datos
              const response = await fetch(`/productos/${producto.id}`);
              
              if (response.status === 404) {
                // El producto no existe, crearlo
                const createResponse = await fetch('/productos', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json'
                  },
                  body: JSON.stringify(producto)
                });
                
                if (createResponse.ok) {
                  console.log(`Producto podotáctil ${producto.nombre} creado en BD`);
                } else {
                  console.error(`Error creando producto ${producto.nombre}`);
                }
              } else if (response.ok) {
                // El producto existe, verificar si necesita actualización
                const productoExistente = await response.json();
                
                // Solo actualizar si las descripciones o imágenes son diferentes
                if (productoExistente.descripcion !== producto.descripcion ||
                    productoExistente.imagen_url !== producto.imagen_url ||
                    productoExistente.imagen_mosaico_url !== producto.imagen_mosaico_url) {
                  
                  const updateResponse = await fetch(`/productos/${producto.id}`, {
                    method: 'PUT',
                    headers: {
                      'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                      ...productoExistente,
                      descripcion: producto.descripcion,
                      imagen_url: producto.imagen_url,
                      imagen_mosaico_url: producto.imagen_mosaico_url
                    })
                  });
                  
                  if (updateResponse.ok) {
                    console.log(`Producto podotáctil ${producto.nombre} actualizado en BD`);
                  }
                }
              }
            }
          } catch (error) {
            console.error('Error sincronizando productos podotáctiles:', error);
          }
        }
        
