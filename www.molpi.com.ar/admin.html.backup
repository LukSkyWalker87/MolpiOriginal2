      async function loadProductosComponent() {
        try {
          console.log('Fetching productos component...');
          const response = await fetch('/admin/component/productos');
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          const componentHTML = await response.text();
          contentArea.innerHTML = componentHTML;
          console.log('Productos component loaded successfully');
          
          // Esperar un poco para que el DOM se actualice y luego inicializar
          setTimeout(() => {
            console.log('Iniciando carga de productos...');
            initComponenteProductos();
          }, 300);
          
        } catch (error) {
          console.error('Error loading productos component:', error);
          contentArea.innerHTML = `
            <div class="alert alert-danger">
              <h4>Error al cargar el componente de productos</h4>
              <p>No se pudo cargar el componente de productos. Error: ${error.message}</p>
              <p>Verifica que el archivo /components/productos.html existe y el servidor está funcionando correctamente.</p>
            </div>
          `;
        }
      }

      // Función para inicializar completamente el componente productos
      async function initComponenteProductos() {
        console.log('=== Iniciando componente productos ===');
        
        // Verificar que estamos en la vista correcta
        const selectCategoria = document.getElementById('productoCategoria');
        const filtroCategoria = document.getElementById('filtroCategoria');
        
        if (!selectCategoria || !filtroCategoria) {
          console.log('No estamos en la vista de productos, saltando inicialización');
          return;
        }
        
        // Variables locales para el componente
        let productos = [];
        let categorias = [];
        let productoEditando = null;
        
        // 1. Cargar categorías
        try {
          console.log('Cargando categorías...');
          const response = await fetch('/api/categorias');
          categorias = await response.json();
          
          // Rellenar select de categorías
          selectCategoria.innerHTML = '<option value="">Selecciona una categoría</option>';
          categorias.forEach(categoria => {
            const option = new Option(categoria.nombre, categoria.nombre);
            selectCategoria.add(option);
          });
          
          // Rellenar filtro de categorías
          filtroCategoria.innerHTML = '<option value="">Todas las categorías</option>';
          categorias.forEach(categoria => {
            const option = new Option(categoria.nombre, categoria.nombre);
            filtroCategoria.add(option);
          });
          
          console.log('Categorías cargadas:', categorias.length);
          
          // Inicializar filtro de subcategorías con todas las subcategorías
          actualizarFiltroSubcategorias();
        } catch (error) {
          console.error('Error cargando categorías:', error);
        }
        
        // 2. Cargar productos
        try {
          console.log('Cargando productos...');
          const response = await fetch('/api/productos?incluir_inactivos=true');
          const data = await response.json();
          productos = data.productos; // Asegura que el array global se actualiza
          mostrarProductos(productos);
          console.log('Productos cargados:', productos.length);
        } catch (error) {
          console.error('Error cargando productos:', error);
          const tbody = document.getElementById('tablaProductos');
          if (tbody) {
            tbody.innerHTML = '<tr><td colspan="9" class="text-center text-danger">Error al cargar productos</td></tr>';
          }
        }
        
        // 3. Función para mostrar productos en la tabla
        function mostrarProductos(productosAMostrar) {
          const tbody = document.getElementById('tablaProductos');
          if (!tbody) return;
          
          // Obtener la tabla completa y asegurar que tenga thead
          const tablaCompleta = tbody.closest('table');
          if (tablaCompleta) {
            // Verificar si existe el thead, si no, crearlo
            let thead = tablaCompleta.querySelector('thead');
            if (!thead) {
              thead = document.createElement('thead');
              tablaCompleta.insertBefore(thead, tbody);
            }
            
            // Asegurar que el thead tenga los títulos correctos
            thead.innerHTML = `
              <tr>
                <th>ID</th>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Categoría</th>
                <th>Subcategoría</th>
                <th>Precio en Pesos</th>
                <th>Precio en Dólares</th>
                <th>Estado</th>
                <th style="min-width: 200px; width: 200px;">Acciones</th>
              </tr>
            `;
            
            thead.style.display = 'table-header-group';
            console.log('✅ Thead creado/actualizado con títulos (función local)');
          }
          
          tbody.innerHTML = '';
          
          if (productosAMostrar.length === 0) {
            tbody.innerHTML = '<tr><td colspan="9" class="text-center">No hay productos para mostrar</td></tr>';
            return;
          }
          
          productosAMostrar.forEach(producto => {
            const fila = document.createElement('tr');
            // Detectar si es un producto podotáctil
            const esPodotactil = producto.categoria === 'Podotáctiles' || producto.id.toString().includes('podotactil');
            fila.innerHTML = `
              <td>${producto.id}</td>
              <td>
                ${producto.imagen_url ? 
                  `<img src="${producto.imagen_url}" alt="${producto.nombre}" style="width: 60px; height: 60px; object-fit: cover;" class="rounded" onerror="this.src='img/placeholder.png'; this.onerror=null;">` : 
                  '<span class="text-muted">Sin imagen</span>'
                }
              </td>
              <td>
                <strong>${producto.nombre}</strong>
                ${producto.descripcion ? `<br><small class="text-muted">${producto.descripcion.substring(0, 100)}...</small>` : ''}
                ${esPodotactil ? '<br><span class="badge badge-warning">Podotáctil</span>' : ''}
              </td>
              <td><span class="badge badge-info">${producto.categoria}</span></td>
              <td><span class="badge badge-secondary">${producto.subcategoria}</span></td>
              <td>${producto.precio ? '$' + producto.precio.toFixed(2) : 'No definido'}</td>
              <td>${producto.precio_usd ? 'U$D ' + producto.precio_usd.toFixed(2) : 'No definido'}</td>
              <td>
                <span class="badge badge-${producto.activo ? 'success' : 'danger'}">
                  ${producto.activo ? 'Activo' : 'Inactivo'}
                </span>
              </td>
              <td>
                <div class="btn-group" role="group">
                  ${esPodotactil ? 
                    `<button class="btn btn-outline-primary btn-sm btn-editar-podotactil" data-id="${producto.id}" title="Editar">
                      <i class="fa fa-edit"></i> Editar
                    </button>
                    <button class="btn btn-outline-danger btn-sm btn-eliminar" data-id="${producto.id}" title="Eliminar">
                      <i class="fa fa-trash"></i> Eliminar
                    </button>` :
                    `<button class="btn btn-outline-primary btn-sm btn-editar" data-id="${producto.id}" title="Editar">
                      <i class="fa fa-edit"></i> Editar
                    </button>
