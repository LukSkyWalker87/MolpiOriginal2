        // 6. Función para mostrar vista previa de imagen (molde y mosaico)
        function mostrarVistaPrevia(urlMolde, urlMosaico = '') {
          const vistasIndividuales = document.getElementById('vistasIndividuales');
          const sinImagen = document.getElementById('sinImagen');
          
          // Elementos individuales
          const soloMolde = document.getElementById('soloMolde');
          const soloMosaico = document.getElementById('soloMosaico');
          const sinMosaico = document.getElementById('sinMosaico');
          
          if (!vistasIndividuales || !sinImagen) return;
          
          // Si no hay URL del molde, no mostrar nada
          if (!urlMolde || urlMolde.trim() === '') {
            vistasIndividuales.style.display = 'none';
            sinImagen.style.display = 'block';
            return;
          }
          
          // Mostrar las vistas
          vistasIndividuales.style.display = 'block';
          sinImagen.style.display = 'none';
          
          // Configurar imagen del molde
          if (soloMolde) {
            soloMolde.src = urlMolde;
            soloMolde.style.display = 'block';
          }
          
          // Configurar imagen del mosaico
          if (urlMosaico && urlMosaico.trim() !== '') {
            // Hay mosaico
            if (soloMosaico) {
              soloMosaico.src = urlMosaico;
              soloMosaico.style.display = 'block';
            }
            if (sinMosaico) {
              sinMosaico.style.display = 'none';
            }
          } else {
            // No hay mosaico
            if (soloMosaico) {
              soloMosaico.style.display = 'none';
            }
            if (sinMosaico) {
              sinMosaico.style.display = 'block';
            }
          }
          
          // Manejar errores de carga
          if (soloMolde) {
            soloMolde.onerror = function() {
              vistasIndividuales.style.display = 'none';
              sinImagen.style.display = 'block';
            };
          }
          
          if (soloMosaico) {
            soloMosaico.onerror = function() {
              soloMosaico.style.display = 'none';
              sinMosaico.style.display = 'block';
            };
          }
        }
        
